<div class="post" >
  <h1>AdminBlog</h1>

  <table>
    <tr>
      <th>Title</th>
      <th class="editPost">Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><h3><%= post.title.force_encoding('utf-8') %></h3></td>
      <td class="editPost" ><%= post.body.split(" ")[0..5].join(" ") %>.....</td>
      <div class="editPost" >
        <td class="editPost" ><%= link_to 'Show', post %></td>
        <td class="editPost" ><%= link_to 'Edit', edit_post_path(post) %></td>
        <td class="editPost1" ><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Post', new_post_path %>
</div>

<div class="postAdmin" >
  <h1>AdminComments</h1>

  <table>
    <tr>
      <th class="editPost1">Title</th>
      <th class="editPost2">Author</th>
      <th class="editPost3">Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    

  <% @walls.each do |wall| %>
    <tr>
      <td class="editPost1"><h3><%= wall.title.force_encoding('utf-8') %></h3></td>
      <td class="editPost2"><%= wall.name.force_encoding('utf-8') %></td>
      <td class="editPost3"><%= wall.content.split(" ")[0..5].join(" ").force_encoding('utf-8') if wall.content != nil %>....</td>
      <div class="editPost">
        <td class="editPost"><%= link_to 'Show', wall %></td>
        <td class="editPost" ><%= link_to 'Edit', edit_wall_path(wall) %></td>
        <td class="editPost1" ><%= link_to 'Destroy', wall, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
    </tr>
  <% end %>
  </table>

  <br />

  <div class="new_comment">
    <div class="editPost">
      <td class="editPost"> <%= link_to 'New Comment', new_wall_path %></td>
    </div>  
  </div>  
</div>