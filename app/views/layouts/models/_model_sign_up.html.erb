<div id="modal" class="modal hide fade in" >
<div>
	<div class="modal-header">
		<a data-dismiss="modal" id="pop_close" class="close"  ></a>
		<h3>Sign up for PlayOn</h3>
	</div>
	<div class="modal-body">
		<%= form_for(:user, :as => :user, :url => registration_path(:user)) do |f| %>
			<fieldset>
				<div class="control-group">
					<label for="user-new-username" class="control-label">Username</label>
					<div class="controls">
						
						<%= f.text_field :username %>
						<span class="help-inline"></span>
					</div>
				</div>
				<div class="control-group">
					<label for="user-new-email" class="control-label">Email</label>
					<div class="controls">
						<%= f.text_field :email %>
						<span class="help-inline"></span>
					</div>
				</div>
				<div class="control-group">
					<label for="user-new-password" class="control-label">Password</label>
					<div class="controls">
						<%= f.password_field :password %>
						<span class="help-inline"></span>
					</div>
				</div>
			</fieldset>
		<div>
			<a href="#" class="sign-in-change"  >Already have an account?  Sign in.</a>
		</div>
	</div>

	<div class="modal-footer">
		<button class="btn btn-primary"><%= f.submit "Sign up" %></button>
		<% end %>
		<button data-dismiss="modal" class="btn"><a id="chanel-pop" href="#">Cancel</a></button>
	</div>
</div>
</div>