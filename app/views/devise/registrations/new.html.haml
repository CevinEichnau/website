%h2=t('devise.registrations.new.sign_up')
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
  = f.error_notification
  = f.input :name, :autofocus => true
  = f.input :email, :required => true
  = f.input :password, :required => true, :label => t("user.password")
  = f.input :password_confirmation, :required => true, :label => t("user.password_confirm")
  = f.button :submit, :value => t('devise.registrations.new.sign_up'), :class => 'btn btn-primary'
= render "devise/shared/links"
