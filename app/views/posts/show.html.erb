<div class="post" >
	<p id="notice"><%= notice %></p>

	<p>
	  <h1>Title:</h1>
	  <h3 style="padding-top:20px" ><%= @post.title %></h3>
	</p>

	<p>
	  <h1 style="padding-top:30px" >Body:</h1>
	
	  <h3 style="width:800px; padding-top:20px" ><% @post.body.split("<br>").each do |c|%>
	  	<%= c %><br>
	  	<% end %>
	  </h3>

	</p>
	<br><br>
	<div class="editPost" >
		<%= link_to 'Back', posts_path %>
	</div>	
</div>
